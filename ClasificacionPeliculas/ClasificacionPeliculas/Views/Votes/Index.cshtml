@model IEnumerable<ClasificacionPeliculasModel.Vote>

@{
    ViewData["Title"] = "Votos";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Pi.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Movies.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.Rate)</th>
                                <th>@Html.DisplayNameFor(model => model.RowCreationTime)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Pi.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Movies.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Rate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RowCreationTime)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="card-footer">
                        <a asp-action="Create" class="btn btn-primary">Crear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>