@model ClasificacionPeliculasModel.Vote

@{
    ViewData["Title"] = "Detalles de la película";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Pi.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Pi.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movies.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movies.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RowCreationTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RowCreationTime)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-danger">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</section>

